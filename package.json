{
  "name": "fantasia-desktop",
  "version": "1.0.0",
  "description": "Fantasia - Desktop Music Theory App",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "node server/server.js",
    "dev": "node server/server.js",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron\"",
    "electron-build": "electron-builder"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.1",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.fantasia.music",
    "productName": "Fantasia",
    "files": [
      "electron/**/*",
      "server/**/*",
      "src/**/*",
      "pages/**/*",
      "assets/**/*",
      "index.html",
      "firestore.rules",
      "package.json",
      ".env"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
